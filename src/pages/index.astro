---
import Layout from '../layouts/Layout.astro';
import heroImg from '../assets/background.svg';
---

<Layout>
  <section class="hero">
    <div class="hero-text">
      <div class="wave" aria-hidden="true">ðŸ‘‹</div>
      <h1>Hello, I am Rui Xiao</h1>
      <p>
        I am a Product Designer with 10+ years experience, focusing in User Interface and User
        Experience. I am also a proud dog parent, and a board game enthusiast.
      </p>
    </div>
    <div class="hero-img">
      <img src={heroImg.src} alt="Portrait" />
    </div>
  </section>

  <section class="work" id="work">
    <div class="work-header">
      <h2>Selected Work</h2>
      <a class="subtle" href="#">View Dribbble â†’</a>
    </div>
    <div class="work-grid">
      <a class="card" href="#">
        <div class="thumb" />
        <div class="meta">
          <h3>Mobile Banking Redesign</h3>
          <p>Improving onboarding and transfers for a fintech app.</p>
        </div>
      </a>
      <a class="card" href="#">
        <div class="thumb" />
        <div class="meta">
          <h3>Analytics Dashboard</h3>
          <p>Real-time KPIs with custom reports and alerts.</p>
        </div>
      </a>
      <a class="card" href="#">
        <div class="thumb" />
        <div class="meta">
          <h3>Eâ€‘commerce Product Page</h3>
          <p>Higher conversion through variant clarity and reviews.</p>
        </div>
      </a>
    </div>
  </section>
</Layout>

<style>
  .hero {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 48px;
    align-items: center;
    padding: 72px 0 40px;
  }

  .hero-text .wave { font-size: 28px; margin-bottom: 12px; }
  .hero-text h1 { font-size: 44px; line-height: 1.1; margin: 0 0 12px; }
  .hero-text p { color: #4b5563; font-size: 18px; line-height: 1.7; margin: 0; }

  .hero-img img {
    width: 100%;
    border-radius: 16px;
    background: linear-gradient(90deg, #ffd644 0%, #00d4ff 50%, #ff4fa3 100%);
    padding: 16px;
  }

  .work { margin-top: 48px; }
  .work-header { display: flex; align-items: center; justify-content: space-between; }
  .work-header h2 { font-size: 20px; font-weight: 600; display: flex; align-items: center; gap: 8px; }
  .work-header .subtle { color: #4b5563; text-decoration: none; }

  .work-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    margin-top: 16px;
  }
  .card {
    display: block;
    text-decoration: none;
    border: 1px solid #e5e7eb;
    border-radius: 16px;
    background: #fff;
    overflow: hidden;
    transition: box-shadow .2s ease;
  }
  .card:hover { box-shadow: 0 6px 24px rgba(0,0,0,.08); }
  .thumb { height: 140px; background: linear-gradient(135deg, #e5efff 0%, #fde7ff 100%); }
  .meta { padding: 14px 16px 18px; }
  .meta h3 { margin: 0 0 6px; font-size: 16px; color: #111827; }
  .meta p { margin: 0; color: #6b7280; font-size: 14px; }

  @media (max-width: 900px) {
    .hero { grid-template-columns: 1fr; }
  }
  @media (max-width: 700px) {
    .work-grid { grid-template-columns: 1fr; }
  }
</style>
